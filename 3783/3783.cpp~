#include <iostream>

using namespace std;

int main()
{
     int i,z,o,j;
     char str[101];

     while(cin>>str && str[0]!='E')
     {
          z=o=j=0;
          i=strlen(str)-1;
          
          while(i--)
               switch(str[i])
               {
               case 'Z':
                    z++;
                    break;
               case 'O':
                    o++;
                    break;
               default:
                    j++;
               }

          
               
     }
     
     return 0;
}
